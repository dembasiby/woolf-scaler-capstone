{
  "analysis": {
    "analyzer": {
      "autocomplete_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "autocomplete_filter"]
      }
    },
    "filter": {
      "autocomplete_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 10
      }
    }
  },
  "index": {
    "number_of_shards": 2,
    "number_of_replicas": 1,
    "max_ngram_diff": 8
  }
}